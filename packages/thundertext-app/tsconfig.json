{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@thunder-text/shared-backend": ["../shared-backend/src/index.ts"],
      "@thunder-text/shared-backend/*": ["../shared-backend/src/*"],
      "@thunder-text/shared-ui": ["../shared-ui/src/index.ts"],
      "@thunder-text/shared-ui/*": ["../shared-ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
