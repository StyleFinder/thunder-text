{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "env": {
    "SHOPIFY_APP_URL": "https://thunder-text-nine.vercel.app",
    "NEXTAUTH_URL": "https://thunder-text-nine.vercel.app",
    "NODE_ENV": "production",
    "SHOPIFY_AUTH_BYPASS": "true",
    "NEXT_PUBLIC_SHOPIFY_AUTH_BYPASS": "true"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.shopify.com https://admin.shopify.com"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}