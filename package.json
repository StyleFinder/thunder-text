{
  "name": "thunder-text",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3050",
    "dev:safe": "./scripts/dev-safe.sh",
    "dev:clean": "./scripts/cleanup-and-start.sh",
    "dev:kill": "lsof -ti:3050 | xargs kill -9 2>/dev/null && pkill -f 'next dev' || echo 'No dev servers running'",
    "build": "node scripts/check-auth-bypass.mjs && next build",
    "build:render": "npm install --legacy-peer-deps && rm -rf .next && node scripts/check-auth-bypass.mjs && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:auth": "SKIP_INTEGRATION_TESTS=true jest src/__tests__/auth --passWithNoTests",
    "test:auth:full": "jest src/__tests__/auth --passWithNoTests",
    "test:auth-flow": "./scripts/test-auth-flow.sh",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:load": "k6 run load-tests/smoke-test.js",
    "test:load:quick": "k6 run --duration 30s --vus 10 load-tests/smoke-test.js",
    "type-check": "tsc --noEmit",
    "security:lint": "next lint --max-warnings 0",
    "security:audit": "npm audit --audit-level=moderate --json > audit-report.json || true && npm audit --audit-level=moderate",
    "security:scan": "snyk test --severity-threshold=medium || true",
    "security:check": "npm run security:lint && npm run security:audit && npm run security:scan",
    "security:monitor": "snyk monitor",
    "test:postgrest-cache": "node scripts/test-postgrest-cache.js",
    "transcribe:bhb": "tsx scripts/transcribe-bhb-audio.ts",
    "transcribe:bhb:skip-db": "tsx scripts/transcribe-bhb-audio.ts --skip-supabase",
    "transcribe:large-files": "tsx scripts/transcribe-large-files.ts",
    "process-bp": "tsx scripts/process-best-practice-example.ts",
    "cleanup-stores": "dotenv -e .env.local -- tsx scripts/cleanup-stores.ts",
    "seed-mock-stores": "dotenv -e .env.local -- tsx scripts/seed-mock-stores.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@next-auth/supabase-adapter": "^0.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.27.0",
    "@shopify/admin-api-client": "^1.1.1",
    "@shopify/app-bridge": "^3.7.10",
    "@shopify/app-bridge-react": "^4.2.7",
    "@shopify/app-bridge-utils": "^3.5.1",
    "@shopify/shopify-api": "^11.14.1",
    "@stripe/stripe-js": "^8.5.3",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.2",
    "@types/dompurify": "^3.0.5",
    "@types/qrcode": "^1.5.6",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.4",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "mammoth": "^1.11.0",
    "next": "^15.5.7",
    "next-auth": "^4.24.13",
    "openai": "^5.23.2",
    "otplib": "^12.0.1",
    "pdfjs-dist": "^5.4.296",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "react-quill-new": "^3.6.0",
    "react-reconciler": "0.29.0",
    "recharts": "^3.3.0",
    "server-only": "^0.0.1",
    "stripe": "^20.0.0",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.5.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "snyk": "^1.1300.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
